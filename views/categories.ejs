<body>

<div class="wrapper">
    <form action="/train" method="get" id="agent-form">
      <input hidden type="text" name="agent" id="agent-value"/>
    </form>
    <div style="padding: 80px;">
        <div style="padding: 15px;">
          <h4>Moti</h4>
          <p>Choose your business type.</p>
        </div>
        <div class="content">
          <div class="col-md-4">
              <div class="card" onclick="send('rest')">
                  <div class="image">
                      <img src="assets/img/rest.jpeg" style="height: 74%"/>
                  </div>
                  <div class="content category">
                    <div class="content text-center">
                      <a>
                        <h4 class="title">Restaurant</h4>
                      </a>
                    </div>
                    <hr>
                  </div>
                  <div class="text-center space">
                    Where people go to eat.
                  </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" onclick="send('barber')">
                <div class="image">
                    <img src="assets/img/barber.png"/>
                </div>
                <div class="content category">
                  <div class="content text-center">
                    <a>
                      <h4 class="title">Barber Shop</h4>
                    </a>
                  </div>
                  <hr>
                </div>
                <div class="text-center space">
                  Where people get haircuts and deep conversations.
                </div>
              </div>
        </div>
        <div class="col-md-4">
            <div class="card" onclick="send('wedding')">
                <div class="image">
                    <img src="assets/img/wedding.png"/>
                </div>
                <div class="content category">
                  <div class="content text-center">
                    <a>
                      <h4 class="title">Photographer</h4>
                    </a>
                  </div>
                  <hr>
                </div>
                <div class="text-center space">
                  Capturing moments.
                </div>
              </div>
        </div>
    </div>
</div>


</body>
  <script type="text/javascript">
    function send(agent) {
      document.getElementById('agent-value').value = agent;
      document.getElementById('agent-form').submit()
    }
  </script>

